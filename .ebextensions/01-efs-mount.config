container_commands:
  01_create:
    command: |
      if [ ! -d /efs ]; then
        sudo mkdir /efs
      fi
  02_chown:
    command: |
      if [ -d /efs ]; then
        sudo chown ec2-user:ec2-user /efs
      fi

packages:
  yum:
    amazon-efs-utils: []

commands:
  01_mount:
    command: "sudo mount -t efs fs-9a8566bb:/ /efs"
    test: "[ -d /efs ]"
