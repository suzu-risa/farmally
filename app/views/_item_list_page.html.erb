<section class="section">
  <div class="container item-list">
    <% if @items.empty? %>
      <p class="title is-4 has-text-centered">商品が見つかりませんでした</p>
    <% else %>
      <%= render :partial => '/breadcrumb', locals:{ breadcrumb: @breadcrumb } %>
      <h1 class="title is-4"><%= @title %><span class="counter">（全<%= @items.size %>件）</span></h1>
      <div class="columns is-mobile is-multiline">
        <% @items.each do |i| %>
          <%= render :partial => '/item_cassette', locals:{ item: i } %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
