<div class="box">
<form class="field is-grouped is-horizontal  has-text-centered" action="/search" method="get">
  <div class="control">
    <div class="select">
      <select name="category">
        <% category = Category.all %>
        <% category.each do |c| %>
          <option value="<%= c.code %>"><%= c.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="control">
    <div class="select">
      <select name="maker">
        <% category = Maker.all %>
        <% category.each do |m| %>
          <option value="<%= m.code %>"><%= m.name %></option>
        <% end %>
      </select>
    </div>
  </div>
    <button class="control button is-primary">
<!--      <span class="icon is-small">-->
<!--            <i class="fas fa-search"></i>-->
<!--      </span>-->
      検索する
    </button>
</form>
</div>