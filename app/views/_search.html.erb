<div class="box">
  <form class="field is-horizontal  has-text-centered" action="/search" method="get">
    <div class="control">
      <div class="select">
        <select name="category">
          <% Category.all.each do |c| %>
            <option value="<%= c.code %>"><%= c.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="control">
      <div class="select">
        <select name="maker">
          <% Maker.all.each do |m| %>
            <option value="<%= m.code %>"><%= m.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <button class="control button is-primary">検索する</button>
  </form>
</div>
