<article class="columns sale-item">
  <div class="column is-12-mobile is-4-tablet is-4-desktop">
    <figure class="image is-96x96">
      <%= image_tag(url_for(sale_item.images.first)) %>
    </figure>
  </div>
  <div class="column is-12-mobile is-4-tablet is-4-desktop">
    <%= sale_item.sale_item_properties.map(&:value).join("/") %>
  </div>
  <div class="column is-12-mobile is-4-tablet is-4-desktop">
    <%= link_to "詳細を見る", "#", class: "button" %>
  </div>
</article>
