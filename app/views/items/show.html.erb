<section class="section item__detail">
  <div class="container">
    <div class="columns is-centered">
      <div class="column">
        <%= render partial: '/breadcrumb', locals: { breadcrumb: @breadcrumb } %>
      </div>
    </div>
    <div class="columns is-centered main">
      <div class="column is-12-mobile is-6-tablet is-6-desktop has-text-centered">
        <%= image_tag 'category/tractor.png', class: 'item-image' %>
      </div>
      <div class="column is-12-mobile is-6-tablet is-6-desktop">
        <h1 class="title"><%= @item.maker.name %> <%= @title %></h1>
        <div class="prices">
          <p>
            <span><%= print_price(@item.maker_price) %></span>円
            <span>(メーカー希望小売価格)</span>
          </p>
          <p class="farmally-price">
            <strong><%= print_price(@item.used_price) %></strong>円
            <span>(ファーマリー中古価格)</span>
          </p>
        </div>
        <div class="buttons">
          <%= link_to(form_path, class: 'button form-button buy-button') do %>
            <%= image_tag 'talk.png', alt: '' %>
            <span>農機具選びを<br class="only-sp" />無料相談する</span>
          <% end %>
          <%= link_to(sell_form_path, class: 'button form-button sell-button') do %>
            <%= image_tag 'cart.png', alt: '' %>
            <span>農機を売る</span>
          <% end %>
        </div>
        <div class="detail">
          <table class="table">
            <tr>
              <th>メーカー</th>
              <td>:</td>
              <td><%= @item.maker.name %></td>
            </tr>
            <tr>
              <th>種類</th>
              <td>:</td>
              <td><%= @item.category.name %></td>
            </tr>
            <tr>
              <th>大きさ</th>
              <td>:</td>
              <td><%= print_text(@item.size) %></td>
            </tr>
            <tr>
              <th>馬力</th>
              <td>:</td>
              <td><%= print_text(@item.horse_power) %></td>
            </tr>
            <tr>
              <th>質量</th>
              <td>:</td>
              <td><%= print_text(@item.weight) %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="section item__reviews">
  <div class="container">
    <div class="columns is-centered">
      <div class="column">
        <h3 class="title">口コミ</h3>
        <%= link_to 'レビューする', new_item_review_path(@item), class: 'review-button' %>
      </div>
    </div>
    <div class="columns is-centered">
      <div class="column">
        <div class="content">
          <% if @reviews.present? %>
            <% @reviews.each do |review| %>
              <%= render partial: 'items/review', locals:{ review: review } %>
            <% end %>
          <% else %>
            <p>まだ口コミはありません</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
