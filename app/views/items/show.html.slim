- set_meta_tags title: "#{@title} 中古販売・買取"
section.section.item__detail
  .container
    .columns.is-centered
      .column
        - breadcrumb(@item)
        = render partial: '/breadcrumb'
    .columns.is-centered.main
      .column.is-12-mobile.is-12-tablet.is-12-desktop
        h1.title.columns
          .model-name
            = @title
          span
            | ◯中古取り扱い ◯高価買取
        .prices
          p
            span
              = maker_price_range(@item)
            | 円 
            span
              | (メーカー希望小売価格)
          p.farmally-price
            strong
              | 要見積もり
            span
              | (ファーマリー中古価格)
        .detail
          table.table
            tr
              th
                | メーカー
              td
                | :
              td
                = @item.maker.name
            tr
              th
                | 種類
              td
                | :
              td
                = @item.category.name
            tr
              th
                | 大きさ
              td
                | :
              td
                = print_text(@item.size)
            tr
              th
                | 馬力
              td
                | :
              td
                = print_text(@item.horse_power)
            tr
              th
                | 質量(kg)
              td
                | :
              td
                = print_text(@item.weight)
            tr
              th
                | 機械の種類
              td
                | :
              td
                = print_text(@item.machine_type)
            tr
              th
                | 作業能率
              td
                | :
              td
                = print_text(@item.work_efficiency)
            tr
              th
                | 備考
              td
                | :
              td.other
                = print_text(@item.other)
        .columns.buttons
          .column.is-12-mobile.is-6-tablet.is-6-desktop
            = link_to(form_path, class: 'button form-button buy-button') do
              = image_tag 'talk.png', alt: ''
              span
                | 農機具選びを
                br.only-sp
                | 無料相談する
          .column.is-12-mobile.is-6-tablet.is-6-desktop
            = link_to(sell_form_path, class: 'button form-button sell-button') do
              = image_tag 'cart.png', alt: ''
              span
                | 農機を売る
section.section.item__sale-items
  .container
    .columns.is-centered
      .column
        h3.title
          | 現在出品中の商品
    .columns.is-centered
      .column
        .content
          - if @sale_items.present?
            - @sale_items.each do |sale_item|
              = render partial: 'items/sale_item', locals:{ sale_item: sale_item }
          - else
            p
              | 出品中の商品はありません
section.section.item__reviews
  .container
    .columns.is-centered
      .column
        h3.title
          | 口コミ
        = link_to 'レビューする', new_item_review_path(@item), class: 'review-button'
    .columns.is-centered
      .column
        .content
          - if @reviews.present?
            - @reviews.each do |review|
              = render partial: 'items/review', locals:{ review: review }
          - else
            p
              | まだ口コミはありません
