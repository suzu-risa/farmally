<%
=begin

The container tag
- available local variables
  current_page : a page object for the currently displayed page
  total_pages  : total number of pages
  per_page     : number of items to fetch per page
  remote       : data-remote
  paginator    : the paginator that renders the pagination tags inside

=end
%>

<%= paginator.render do %>
  <nav class="paginate">
    <ul class="paginate__list">
      <li class="paginate__list__item first">
      <%= first_page_tag %>
      </li>
      <% each_page do |page| %>
        <% if page.display_tag? %>
          <li class="paginate__list__item page-number">
            <%= page_tag page %>
          </li>
        <% end %>
      <% end %>
      <li class="paginate__list__item last">
        <%= last_page_tag %>
      </li>
      <li class="paginate__list__item page-number-for-sp">
        <span class="page-number-for-sp__current"><%= current_page %></span> / <span class="page-number-for-sp__total"><%= total_pages %></span>
      </li>
      <li class="paginate__list__item prev">
        <%= prev_page_tag %>
      </li>
      <li class="paginate__list__item next">
        <%= next_page_tag %>
      </li>
    </ul>
  </nav>
<% end %>
